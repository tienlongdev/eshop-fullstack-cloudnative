{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "ReverseProxy": {
    "Routes": {
      "catalog-route": {
        "ClusterId": "catalog-cluster",
        "Match": {
          "Path": "/api/v1/catalog/{**catch-all}"
        },
        "Transforms": [
          { "PathPattern": "/{**catch-all}" }
        ]
      },
      "orders-route": {
        "ClusterId": "ordering-cluster",
        "Match": {
          "Path": "/api/v1/orders/{**catch-all}"
        },
        "Transforms": [
          { "PathPattern": "/{**catch-all}" }
        ]
      }
    },
    "Clusters": {
      "catalog-cluster": {
        "Destinations": {
          "d1": { "Address": "http://catalog:3000/" }
        }
      },
      "ordering-cluster": {
        "Destinations": {
          "d1": { "Address": "http://ordering:5002/" }
        }
      }
    }
  }
}
